enum Permission {
	ADMIN
	USER
	ITEMCREATE
	ITEMUPDATE
	ITEMDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @unique
	name: String!
	email: String! @unique
	password: String!
	resetToken: String
	resetTokenExpiry: Float
	# keyboards: [Keyboard]
	permissions: [Permission]
}

enum Condition {
	USED
	NEW
}

enum Layout {
	ANSI
	ISO
}

enum Size {
	FORTY_PERCENT
	SIXTY_PERCENT
	SEVENTY_FIVE_PERCENT
	TKL
	FULL_SIZE
}

type Keyboard {
	id: ID! @unique
	name: String!
	switches: String!
	size: Size
	images: [String!]!
	layout: Layout
	price: Int!
	description: String
	keycaps: String
	condition: Condition!
	# createdAt: DateTime!
	# updatedAt: DateTime!
	# user: User!
}
